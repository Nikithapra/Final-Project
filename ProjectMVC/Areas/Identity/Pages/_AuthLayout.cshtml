@{
    Layout = "/Views/Shared/_Layout.cshtml";

}
<div class="flex-xxl-row">
    <div class=" col-md-7 offset-md-3" >
    <div class ="card login-loginout-tab">
            <div class="card-header" style="background-color:deepskyblue">
                <ul class=" nav nav-tabs card-header-tabs" style="background-color:deepskyblue">
                    <li class="nav-item" style="background-color:deepskyblue">
            <a class="nav-link" href="/Identity/Account/Login">Sign-In </a>
          </li>
                    <li class="nav-item" style="background-color:deepskyblue">
                <a class="nav-link" href="/Identity/Account/Register">Sign-Up </a>
             </li>
       </ul>

    </div>
     
    <div class="card-content">
        <div class="row">
           @* <div class="col-md-7">*@
                @RenderBody()
            @*</div>*@
        </div>

    </div>

    </div>

  </div>

</div>



@section Scripts {

    @RenderSection("Scripts", required: false)
<script>
    $(function()
    {
        var current=location.pathname;
        $('.nav-tabs li a').each(function()
        {

                var $this = $(this);
                if(current.indexOf($this.attr('href'))!==-1)
                {
                $this.addClass('active');
                
                }

        })

    })

    
</script>


}